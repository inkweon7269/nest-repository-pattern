{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".(e2e|integration)-spec.ts$",
  "testTimeout": 30000,
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@src/(.*)$": "<rootDir>/../src/$1"
  },
  "globalSetup": "./setup/global-setup.ts",
  "globalTeardown": "./setup/global-teardown.ts",
  "maxWorkers": 1
}
